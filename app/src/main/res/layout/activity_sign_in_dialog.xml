<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin_Dialog.sign_in_Dialog"
    android:background="@drawable/hinh1"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="850dp"
        android:layout_height="500dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--Quit button-->
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-36dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/Silver"
            android:text="X"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--Main content-->
        <TextView
            android:id="@+id/mainTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="130dp"
            android:text="Bạn vui lòng nhập mã PIN"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <!--2 buttons for acept or skip this step-->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editPasswordDialog"
            android:layout_width="700dp"
            android:layout_height="60dp"
            android:layout_below="@id/mainTxt"
            android:layout_marginStart="70dp"
            android:layout_marginTop="49dp"
            android:background="@drawable/round_coner"
            android:backgroundTint="@color/Silver"
            android:gravity="center"
            android:hint="Nhập mã tại đây"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/Blue"
            android:textColorHint="@color/Blue"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="100dp"
            android:layout_below="@+id/editPasswordDialog"
            android:layout_marginStart="70dp"
            android:layout_marginTop="70dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAcpDialog"
                android:layout_width="232dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="180dp"
                android:background="@drawable/round_coner"
                android:backgroundTint="@color/Green"
                android:padding="20dp"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_CancelDialog"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_coner"
                android:backgroundTint="@color/Silver"
                android:padding="20dp"
                android:text="Bỏ qua"
                android:textAllCaps="false"
                android:textColor="@color/Red"
                android:textSize="30sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>