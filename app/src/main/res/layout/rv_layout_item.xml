<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="15sp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:gravity="center">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Chương trình 1"
                android:textColor="@color/Maroon"
                android:textSize="60sp"
                android:layout_marginTop="-10sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:id="@+id/menuArea"
            android:gravity="center">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="400dp"
                android:layout_height="300sp"
                android:layout_below="@id/eventName"
                android:scaleType="fitCenter"
                android:src="@drawable/ct1" />
            <ImageView
                android:id="@+id/menu2"
                android:layout_width="400dp"
                android:layout_height="300sp"
                android:layout_marginStart="60dp"
                android:layout_below="@id/eventName"
                android:scaleType="fitCenter"
                android:src="@drawable/ct1" />
            <ImageView
                android:id="@+id/menu3"
                android:layout_width="400dp"
                android:layout_height="300sp"
                android:layout_marginStart="60dp"
                android:layout_below="@id/eventName"
                android:scaleType="fitCenter"
                android:src="@drawable/ct1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuArea"
            android:layout_marginTop="-20dp"
            android:id="@+id/menuSlider"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/slider1"
                android:layout_width="400dp"
                android:layout_height="300sp"
                android:scaleType="fitCenter"
                android:src="@drawable/ct1" />
            <ImageView
                android:id="@+id/slider2"
                android:layout_width="400dp"
                android:layout_height="300sp"
                android:layout_marginStart="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ct1" />
            <ImageView
                android:id="@+id/slider3"
                android:layout_width="400dp"
                android:layout_height="300sp"
                android:layout_marginStart="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ct1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuSlider"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:textStyle="bold"
                android:textSize="60sp"
                android:text="Từ ngày : 27-02-2024"
                android:textColor="@color/Maroon"
                android:layout_marginTop="-10sp"/>
            <TextView
                android:id="@+id/idEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="40sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>