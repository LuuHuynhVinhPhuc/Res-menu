<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sliderView"
    android:background="@color/White">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/autoSliderget"
        android:layout_width="match_parent"
        android:layout_height="1150sp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/autoSliderget"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/slideDot"/>

    <!--copy right and button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bấm vào đây để xem menu chi tiết -->"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnChangetoSlider"
            android:layout_width="196dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/white"
            android:contentDescription="gotoSignin"
            android:scaleType="centerInside"
            android:src="@drawable/logomini_lotus" />
    </LinearLayout>
</RelativeLayout>